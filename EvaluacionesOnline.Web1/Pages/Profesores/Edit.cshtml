@page "{id:int}"
@model EvaluacionesOnline.Web.Pages.Profesores.EditModel
@{
    ViewData["Title"] = "Editar Profesor";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Profesor.Nombre" class="form-label">Nombre</label>
        <input asp-for="Profesor.Nombre" class="form-control" id="Nombre" />
        <span asp-validation-for="Profesor.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Profesor.Apellido" class="form-label">Apellido</label>
        <input asp-for="Profesor.Apellido" class="form-control" id="Apellido" />
        <span asp-validation-for="Profesor.Apellido" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Profesor.Email" class="form-label">Email</label>
        <input asp-for="Profesor.Email" type="email" class="form-control" id="Email" />
        <span asp-validation-for="Profesor.Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>

    <div class="form-group">
        <label for="Contraseña">Contraseña</label>
        <input type="password" class="form-control" id="Contraseña" asp-for="Profesor.Contraseña" />
    </div>

</form>

@section Scripts {
    <script>
        <partial name="_ValidationScriptsPartial" />
    </script>
}

