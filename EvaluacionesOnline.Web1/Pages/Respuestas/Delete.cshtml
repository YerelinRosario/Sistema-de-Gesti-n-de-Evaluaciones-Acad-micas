@page "{id:int}"
@model EvaluacionesOnline.Web.Pages.Respuestas.DeleteModel
@{
    ViewData["Title"] = "Eliminar Respuesta";
}

<h1>@ViewData["Title"]</h1>

<h4>¿Estás seguro de que deseas eliminar esta respuesta?</h4>
<hr />
<div>
    <p>Id: @Model.Id</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
</form>
