@page "{id:int}"
@model EvaluacionesOnline.Web.Pages.Respuestas.DetailsModel
@{
    ViewData["Title"] = "Detalles de Respuesta";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Respuesta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Respuesta.Id</dd>

        <dt class="col-sm-2">Texto de Respuesta</dt>
        <dd class="col-sm-10">@Model.Respuesta.TextoRespuesta</dd>

        <dt class="col-sm-2">Estudiante Id</dt>
        <dd class="col-sm-10">@Model.Respuesta.EstudianteId</dd>

        <dt class="col-sm-2">Evaluación Id</dt>
        <dd class="col-sm-10">@Model.Respuesta.EvaluacionId</dd>
    </dl>
</div>

<a asp-page="./Index" class="btn btn-secondary">Volver</a>

