@page "{id:int}"
@model EvaluacionesOnline.Web.Pages.Estudiantes.DeleteModel
@{
    ViewData["Title"] = "Eliminar Estudiante";
}

<h1>Eliminar Estudiante</h1>

<p>¿Está seguro de que desea eliminar al siguiente estudiante?</p>

<table class="table">
    <tr>
        <th>Nombre</th>
        <td>@Model.Estudiante.Nombre</td>
    </tr>
    <tr>
        <th>Apellido</th>
        <td>@Model.Estudiante.Apellido</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Estudiante.Email</td>
    </tr>
</table>

<form method="post">
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
