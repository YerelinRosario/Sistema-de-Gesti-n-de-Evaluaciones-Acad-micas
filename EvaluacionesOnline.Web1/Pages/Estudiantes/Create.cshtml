@page
@model EvaluacionesOnline.Web.Pages.Estudiantes.CreateModel
@{
    ViewData["Title"] = "Crear Estudiante";
}

<h1>@ViewData["Title"]</h1>

<!-- Muestra errores generales si existen -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="Estudiante.Nombre" class="form-label"></label>
        <input asp-for="Estudiante.Nombre" class="form-control" />
        <span asp-validation-for="Estudiante.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estudiante.Apellido" class="form-label"></label>
        <input asp-for="Estudiante.Apellido" class="form-control" />
        <span asp-validation-for="Estudiante.Apellido" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estudiante.Email" class="form-label"></label>
        <input asp-for="Estudiante.Email" class="form-control" />
        <span asp-validation-for="Estudiante.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estudiante.Contraseña" class="form-label"></label>
        <input asp-for="Estudiante.Contraseña" class="form-control" type="password" />
        <span asp-validation-for="Estudiante.Contraseña" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>



