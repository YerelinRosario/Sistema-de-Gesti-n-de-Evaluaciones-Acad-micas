@page "{id:int}"
@model EvaluacionesOnline.Web.Pages.Calificaciones.DeleteModel
@{
    ViewData["Title"] = "Eliminar Calificación";
}

<h1>@ViewData["Title"]</h1>

<h4>¿Estás seguro de que deseas eliminar esta calificación?</h4>
<div class="card mt-3">
    <div class="card-header">
        Información de la Calificación
    </div>
    <div class="card-body">
        <p><strong>Estudiante:</strong> @Model.Calificacion.EstudianteNombre</p>
        <p><strong>Evaluación:</strong> @Model.Calificacion.EvaluacionTitulo</p>
        <p><strong>Nota:</strong> @Model.Calificacion.Nota</p>
    </div>
</div>

<form method="post" class="mt-3">
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
