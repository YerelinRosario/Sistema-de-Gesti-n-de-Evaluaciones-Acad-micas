@page "{id:int}"
@model EvaluacionesOnline.Web.Pages.Evaluaciones.EditModel
@{
    ViewData["Title"] = "Editar Evaluación";
}

<h1>@ViewData["Title"]</h1>

<form method="post" asp-action="Edit">
    <div class="form-group">
        <label asp-for="Evaluacion.Titulo"></label>
        <input asp-for="Evaluacion.Titulo" class="form-control" />
        <span asp-validation-for="Evaluacion.Titulo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Evaluacion.Descripcion"></label>
        <textarea asp-for="Evaluacion.Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Evaluacion.Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Evaluacion.FechaCreacion"></label>
        <input asp-for="Evaluacion.FechaCreacion" class="form-control" type="datetime-local" />
        <span asp-validation-for="Evaluacion.FechaCreacion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Evaluacion.ProfesorId"></label>
        <input asp-for="Evaluacion.ProfesorId" class="form-control" />
        <span asp-validation-for="Evaluacion.ProfesorId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>

